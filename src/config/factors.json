        "handover_docs": "readme",
        "risk_level": "low",
        "timeline_pressure": "normal"
      }
    },
    {
      "id": "preset_good",
      "label": "Good Website",
      "country": "NL",
      "meta": { "order": 1, "targetP50Range": [1000, 2000] },
      "values": {
        "project_type": "brochure",
        "design_source": "template_existing",
        "brand_design": "light",
        "pages_unique": 4,
        "pages_reused_count": 10,
        "cms_choice": "wordpress",
        "wp_page_builder": "gutenberg",
        "i18n_locales": 1,
